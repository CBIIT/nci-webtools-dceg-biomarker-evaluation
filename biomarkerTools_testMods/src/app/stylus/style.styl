body
    font-family "Arial Rounded MT Bold", "Helvetica Rounded", "Arial", "sans-seriff"
    #main
        width 1280px
        margin 0 auto
        font-size small

    .title
        color black
    .bg-popover
        background-color highlight
        .popover-title
            background-color higlight-compl
    .subheader
        font-weight bold
        color white
        background-color slategray

    .extra-padding
        padding 1em

    .extra-vertical-margin
        margin 10px 0
    #contentTabs
        margin 1.5em auto
        ul.nav.nav-tabs
            font-size 9pt
            > li
                border-bottom 1px solid #ddd
            a
                color black
            > li.active a
                text-decoration underline
                font-weight bold
             :after
                border solid transparent
                margin-left -10px
                top 100%
                left 50%
        .tab-content
            line-height 1.42857143
            border-right 1px solid #ddd
            border-bottom 1px solid #ddd
            border-left 1px solid #ddd
            border-radius 4px
            padding 1.5em
        #sampleSize
            .row
                margin 1em auto
        #bc
            .example-image
                float left
            .explanation 
                float left
                padding-left 15px
                width 600px
            .reference_row 
                background-color  yellow
            td 
                text-align center

            .top-header 
                text-align center
                background-color #444
                color #FFF
            .header 
                background-color #AAA
                color #444
            #output 
                width 500px
            #inputdata 
                width 500px
            h2 
                background-color #AAA
                color #444
                padding 5px
            .prevalence_label 
                font-weight bold
