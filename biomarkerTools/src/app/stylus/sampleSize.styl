.input
  width 100%
  max-width 640px
  margin 0px auto
  .panel-body.table_container
    > .table_row
      &:first-child
        > .table_data
          @media (max-width 430px)
            height 5.2em
          &:last-child
            height 5.2em
        @media (max-width 540px)
          ~ .table_row .table_data:first-child
            height 4.4em
            line-height 2em
      > .table_data
        &:first-child
          min-width 12em
        &:nth-child(2)
          width 10em
          @media (max-width 540px)
            float none
            overflow auto
            width auto
    .table_container .table_data
      width 50%
  .panel-footer.table_container
    .table_row:first-child
      float right
    .table_row:last-child .table_data:last-child
      float left
.output
  .table_row
    padding 0px
    &:first-child .table_data
      border-top-width 1px
      background-color #F5F5F5
      height 4.2em
      line-height 4em
      font-weight bold
      &:last-child
        line-height 2em
  .table_data
    width 25%
    border solid #DDD
    border-width 0px 1px 1px 0px
    &:first-child
      border-left-width 1px
    &:last-child
      width 50%
