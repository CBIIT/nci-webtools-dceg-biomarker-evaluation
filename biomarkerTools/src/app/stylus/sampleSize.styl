form
  margin-bottom 1em
.input
  width 100%
  max-width 640px
  margin 0px auto
  .panel-body.table_container
    > .table_row
      &:first-child
        > .table_data
          @media (max-width 430px)
            height 5.2em
          &:last-child
            height 5.2em
        @media (max-width 540px)
          ~ .table_row .table_data:first-child
            height 4.4em
            line-height 2em
      > .table_data
        &:first-child
          min-width 12em
        &:nth-child(2)
          width 10em
          @media (max-width 540px)
            float none
            overflow auto
            width auto
    .table_container .table_data
      width 50%
  .panel-footer.table_container
    .table_row:first-child
      float right
    .table_row:last-child .table_data:last-child
      float left
.output
  @media (min-width 768px)
    .left_group
      float left
      width 50%
      max-width 350px
      margin 0px auto
      padding-right 15px
    .right_group
      float right
      width 50%
      max-width 350px
      margin 0px auto
      padding-left 15px
  .table_row
    padding 0px
    &:first-child
      position relative
      .table_data
        height 100%
        border-top-width 1px
        background-color #F5F5F5
        font-weight bold
        &:first-child
          position absolute
        &:nth-child(2)
          position absolute
          left (100%*1/3)
        &:last-child
          float right
  .table_data
    border solid #DDD
    border-width 0px 1px 1px 0px
    width (100%*1/3)
    &:first-child
      border-left-width 1px
