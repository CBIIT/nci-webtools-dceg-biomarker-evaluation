.input
  overflow auto
  margin 0px auto
  width 100%
  max-width 600px
  .table_data
    &:first-child
      min-width 11em
    &:nth-child(2)
      min-width 7em
    &:nth-child(3)
      float right
    &:last-child
      min-width 7em
.output
  @media (max-width 379px)
    .ui-tabs .ui-tabs-panel
      padding 1em 0px
  .table_container
    overflow auto
    .table-header
      background-color #F8FAFA
      font-weight bold
      text-align center
    th
      background-color #AAA
      color #444
      &:first-child
        vertical-align bottom
    th, td
      padding .1em .15em
  .vertical-text
    transform rotate(-90deg)
    white-space nowrap
    width 1em
