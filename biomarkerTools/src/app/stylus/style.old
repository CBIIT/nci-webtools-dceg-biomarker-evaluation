@-ms-viewport
  width "device-width"
input
  padding 1px !important
table .table_data
  float none
#meanstorisk
  #download_button
    margin 10px
  .input_panel
    border  1px #BBB solid
  .key_output_panel
    float left
    background-color #faf
    height 99%
  .tabbed_output_panel
    height 99%
    overflow auto
    #tabs
      font-size inherit
      margin 0px
  .highlight
    background-color yellow
  .col1
    padding 6px
    text-align center
  .maincard
    height 750px
    border 2px black solid
  .highlight
    background-color yellow
  table.table_data
    width 99%
    background-color white
    border 1px #BBB solid
  table.output_data
    background-color white
    border-collapse collapse
    border 2px black solid
  th.table_data
    padding 2px
  th.header
    border-bottom  1px #BBB solid
  tr.table_data_header
    border-bottom  1px black solid
    background-color #A0A0A0
  tr.line-above
    border-top 1px #BBB solid
  .main-title
    text-align center
  .PPV_stripe
    border-bottom 1px black solid
    background-color #B080FF
  .cNPV_stripe
    border-bottom 1px black solid
    background-color #8080FF
  .PPVcNPV_stripe
    border-bottom 1px black solid
    background-color #FFAA80
  .ProgramBased_stripe
    border-bottom 1px black solid
    background-color #FFB0D0
  .PPVBased_stripe
    border-bottom 1px black solid
    background-color #A0A0A0
  .SensitivityBased_stripe
    border-bottom 1px black solid
    background-color #808080
  .DominatedByRareDisease_stripe
    border-bottom 1px black solid
    background-color #F0F0F0
#bc
  @media (max-width 1000px)
    .bottom_group
      > div
        float none
        width 100%
        padding-right 0px
      #graph
        width 608px
        margin 0px auto
        padding-right 4px
  @media (max-width 780px)
    .top_group > img
      float none
      display block
      margin 0px auto
      width 480px
    .top_group > img ~ *
      float none
  .top_group
    > div
      overflow auto
      ul
        padding-left 1.5em
    > img
      width 350px
      max-width 100%
      float left
      overflow visible
  .reference_row
    background-color yellow
  .top-header
    text-align center
    background-color #444
    color #FFF
  .bottom_group
    > div
      float left
      padding-right 15px
      width (100%*7/12)
    #graph
      width (100%*5/12)
      max-width 100%
      img
        width 80%
  #inputdata
    > div
      overflow auto
      > div
        float left
        width (100%*1/12)
        & ~ div
          width (100%*3/12)
          & ~ div ~ div ~ div
            width (100%*2/12)
    .input:hover
      cursor text
    .panel-body
      padding-top 0
      padding-bottom 0
  #output > div ~ div
    display table
    width 100%
    table-layout fixed
    > div
      display table-cell
  h2
    background-color #AAA
    color #444
    padding 5px
  .bibliography
    clear both
    float left
    margin 50px
  .bib-author
    float left
  .bib-year
    float left
  .bib-title
    float left
    font-style italic
  .bib-journal
    float left
  .bib-ref
    float left
  .bib-pages
    float left
  .bib-doi
    float left
#riskStratAdvanced
  input,select
    padding 1px
  .panel-body
    > div
      overflow auto
      padding 1px
      > div
        float left
        min-width 13em
        height 2em
        *
          width 100%
          height 100%
          line-height 2em
          margin-bottom 0px
        + div
          min-width 7em
          padding-right 2px
      .input
        overflow auto
        float none
      .infobox
        float right
        min-width 0px
        padding-right 0px
  #add-test-data
    text-decoration underline
    float right
    &:hover
      font-weight bold
  #status-bar
    background #CCC
    display block
    border none
    box-sizing border-box
    font 18px "arial", "sans-serif"
    left 0
    margin 10px
    outline none
    padding 10px
    top 2px
    visibility hidden
  #tabs
    font-size inherit
    .header
      background-color #AAA
      color #444
    .vertical-text
      transform rotate(-90deg)
      white-space no-wrap
  .table-title
    word-wrap normal
    font-weight bold
    text-align center
    background-color #F8FAFA
.define,.termToDefine
  font-weight bold
  text-decoration underline
  cursor help
.extra-padding
  padding 1em
.extra-vertical-margin
  margin 10px 0
.footer
    color #606060
    background-color white
    font-size small
    li a
      color inherit
.glyphicon + span
  margin-left 1em
.header
  background-color tan
.indent
  margin-left 30px
  margin-right 20px
  margin-top 10px
  margin-bottom 5px
.no-pad
  padding 0
.popover
  .popover-title
    background-color highlight-compl
    font-weight bold
  .popover-content
    background-color highlight
.table_container
  overflow auto
.table_data
  float left
.table_row
  clear both
.title
  color black
.vertical-padding
  padding-top .5em
  padding-bottom .5em
#contentTabs
  width 100%
  margin 1.5em auto
  ul.nav.nav-tabs
    font-size small
    font-size 9pt
    a
      color black
    > li.active a
      text-decoration underline
      font-weight bold
      color base-red
     :after
      border solid transparent
      margin-left -10px
      top 100%
      left 50%
  #sampleSize
    .tablevars
      padding 0
    #ss
      // width 50%
    .row
      margin 1em auto
  #help
    h4 a
      color white
      font-size smaller
    section h5
      font-weight bold
     ul li li
       text-indent 1.5em
  #meanRiskStratification
    table input[type="number"]
      width 100%
    .marker-title
      background-color tan
    #results table th
      background-color tan
    .red
      background-color base-red
    .panel-title, .panel-title a
      font-size small
    .panel-toggle a, .panel-title a
      color black
      font-weight bold
    label
      font-weight bold
    .well, #results
      min-height 645px
    .termToDefine, th
      font-weight bold

    .termToDefine.glyphicon
      text-decoration none
    .loader
      background-image url("/common/images/loading.gif") no-repeat
      margin 0 auto
      height 300px
    .input:invalid
      background-color yellow
#portal-footer
  line-height 1.2em
  text-align center
  background-color #FFF
  color #333333
  font-size small
  a
    text-decoration none
    color #333333
    border none
    :visited
      color #333333
    :hover
      text-decoration underline
