.maliable
  @media (min-width 800px)
    > div
      float left
      width 50%
    .input
      padding-right 15px
    .output
      padding-left 15px
    .graph
      width 100%
  @media (min-width 1200px)
    > div
      width (100%*4/13)
      padding 15px
    > .graph
      width (100%*5/13)
    .graph_panel img.expand
      width 100%
      transform-origin top right
      &:hover
      &:active
        transform scale(1.5)
#cases_control
  .table_row > div
    width 30%
    &:first-child
      width 40%
  input
    width 100%
#accordion .panel-footer input
    width 100%
#mtr-results
  .table_row
    border 1px solid #ddd
    border-radius 4px
    &:nth-child(5), &:nth-child(7), &:nth-child(8)
      .table_data
        line-height 4em
        height 4em
        &:first-child
          line-height 2em
  .table_data
    width 25%
    &:first-child
      width (100%/3)
    &:nth-child(2)
      width (100%/6)
.graph_panel
  text-align center
  img
    display block
    margin 0px auto
    width 100%
    transform-origin top right
    &:hover, &:active
      transform scale(1.4)
.tabbed_output_panel
  table
    width 99%
    border 2px black solid
    border-collapse collapse
    th
      padding 2px
      border-bottom 1px #BBB solid
    .PPV_stripe
      border-bottom 1px black solid
      background-color #B080FF
    .cNPV_stripe
      border-bottom 1px black solid
      background-color #8080FF
    .PPVcNPV_stripe
      border-bottom 1px black solid
      background-color #FFAA80
    .ProgramBased_stripe
      border-bottom 1px black solid
      background-color #FFB0D0
    .PPVBased_stripe
      border-bottom 1px black solid
      background-color #A0A0A0
    .SensitivityBased_stripe
      border-bottom 1px black solid
      background-color #808080
    .DominatedByRareDisease_stripe
      border-bottom 1px black solid
      background-color #F0F0F0
