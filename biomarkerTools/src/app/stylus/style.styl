common-blue = #4e5669
red = #a90002
light-red = #CD5C5C
tan = #F3EFE0

body
    font-family "Arial Rounded MT Bold", "Helvetica Rounded", "Arial", "sans-seriff"

#main
    width 1100px
    margin 0 auto
    font-size small

.title
    color black

#contentTabs
    margin 1.5em auto
    ul.nav.nav-tabs 
        border-bottom none
        > li a
            color black
        > li.active a
            text-decoration underline
            font-weight bold
            background rgba(225, 220, 245,0.1)
        :after
            border solid transparent
            margin-left -10px
            top 100%
            left 50%
    .tab-content
        line-height 1.42857143
        border-right 1px solid #ddd
        border-bottom 1px solid #ddd
        border-left 1px solid #ddd
        border-radius 4px
        padding 1.5em
        background rgba(225, 220, 245,0.1)
        
  /* sample size styles */
    #sampleSize
        .row
            margin 1em auto
    #bm_compare
        .example-image
            float left
        .explanation 
            float left
            padding-left 15px
            width 600px
        .reference_row 
            background-color  yellow
        td 
            text-align center

        .top-header 
            text-align center
            background-color #444
            color #FFF
        .header 
            background-color #AAA
            color #444
        #output 
            width 500px
        #inputdata 
            width 500px
        h2 
            background-color #AAA
            color #444
            padding 5px
        .prevalence_label 
            font-weight bold
            background-color #AAA
            color #444
            padding 2px 25px 2px 25px
        .bibliography 
            width 950px
            clear both
            float left
            margin 50px
        .bib-author 
            float left
        .bib-year 
            float left
        .bib-title 
            float left
            font-style italic
        .bib-journal 
            float left
        .bib-ref 
            float left
        .bib-pages 
            float left
        .bib-doi 
            float left
        .bibliography_entry 
            width 300px
        .bibliography_link 
            width 50px