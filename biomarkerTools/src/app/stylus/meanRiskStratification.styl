.input
  overflow auto
  width 100%
  max-width 480px
  margin 0px auto
  @media (min-width 950px)
    float left
    padding-right 15px
  #control-group
    a:last-child::before
      content '\a0'
    .table_row:first-child
      @media (min-width 480px)
        float left
        width 70%
      .table_data
        width 25%
        &:nth-last-child(2)
          float right
        &:last-child
          width auto
  .option-1, .option-2
    .table_row:first-child
      background-color #F5F5F5
  .option-1
    .table_data
      float right
      min-width 7em
      width (100%*1/3)
      &:last-child
        float none
        background-color #F5F5F5
        width auto
    @media (max-width 480px)
      .table_data
        height 4.2em
      .table_row:not(:first-child) .table_data:not(:last-child)
        line-height 4em
  .option-2
    .table_data
      &:first-child
        min-width 14em
      span
        float right
      div
        overflow auto
.output
  overflow auto
  @media (min-width 950)
    padding-left 15px
  table
    border-top 1px solid #DDD
    margin 1em 0px
    @media (min-width 480px)
      margin-top 0px
  th
    background-color #F5F5F5
  th, td
    border solid #DDD
    border-width 0px 1px 1px 0px
    padding .1em .15em
  th:first-child, td:first-child
    border-width 0px 1px 1px
    